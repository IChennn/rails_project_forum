<%= simple_form_for @group do |f| %>

<div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"} %>
    <%= f.input :description, input_html: { class: "form-control", :rows => 4} %>
    <%= f.file_field :image %>
</div>
<div class="row">
<div class="col-md-3">
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting" } %>
</div>
<div class="col-md-4">
<%= link_to("Cancel", groups_path, class: "btn btn-md btn-default")%>
</div>
</div>
<% end %>


