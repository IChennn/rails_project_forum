<%= form_for @group do |f| %>
<div class="form-group">
    <div class="form-group string optional">
        <%= f.label "Title", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control form-control" %>
    </div>
    <div class="form-group string optional">
        <%= f.label "Description", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>
</div>
<div class="row">
<div class="col-md-2">
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
</div>
<div class="col-md-4">
<span class="btn"><%= link_to "Cancel", groups_path %></span>
</div>
</div>
<% end %>
    