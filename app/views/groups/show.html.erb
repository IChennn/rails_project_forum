<div class="col-md-12" id="content">

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <div class="group row">
	<div class="col-md-1">
    	<%= link_to("Edit Book Info", edit_group_path(@group), class: "btn btn-primary btn-md")%>
    </div>
    <div class="col-md-1">
    	<%= link_to("Write Review", new_group_post_path(@group), class: "btn btn-primary btn-md")%>
    </div>
    <div class="col-md-1">
    	<%= link_to("Go Back to List", groups_path, class: "btn btn-primary btn-md")%>
    </div>
  </div>
	<br>
	<table class="table">
    <thead>
      <tr>
        <th>Reviews</th>
        <th>Author</th>
        <th>date</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


	