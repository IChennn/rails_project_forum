<div class="banner">
    <div class="container">

        <div class="row">
            <div class="col-lg-6">
                <h2>Enrich Your Life With Books:</h2>
            </div>
            <div class="col-lg-6">
                <ul class="list-inline">
                    <div class="group">
                      <%= link_to("Add New Book", new_group_path, class: "btn btn-lg btn-default pull-right") %>
                    </div>                       
                </ul>
                </div>
        </div>
    </div>
    <!-- /.container -->
  </div>
<!-- /.banner -->
  

<div class="col-md-12" id="review_body">
  
  <table class="table table-hover">
    <thead>
      <tr>
        <td></td>
        <td><h4>Title</h4></td>
        <td><h4>Description</h4></td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td></td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
              <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", group_path(group),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

