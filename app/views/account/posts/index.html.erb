<div class="col-md-12" id="content">
  <h2 class="text-center"> My Reviews </h2>
  <hr class="intro-divider">
  <br><br>
  <table class="table">
    <thead>
      <tr>
        <td></td>
        <td> <h4>Content</h4> </td>
        <td> <h4>Book Title</h4> </td>
        <td> <h4>Last Update</h4> </td>
        
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td></td>
          <td> <%= simple_format(post.content) %> </td>
          <td> <%= link_to(post.group.title, group_path(post.group)) %> </td>
          <td> <%= post.updated_at.to_date %> </td>
          <td> 
            <%= link_to('Edit', edit_group_post_path(post.group, post), class: "btn btn-default btn-sm") %>
            <%= link_to('Delete', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-sm") %>
          </td>
        </tr>
      <% end %>
    </tbody>    
  </table>

  <div class="text-center">
      <%= will_paginate @post %>
    </div>

</div>