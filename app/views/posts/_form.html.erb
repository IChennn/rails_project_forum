<%= simple_form_for [@group, @post] do |f| %>

<div class="form-group">   
    <%= f.input :content, input_html: { class: "form-control", :rows => 4} %>
</div>
<div class="row">
<div class="col-md-3">
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting" } %>
</div>
<div class="col-md-4">
<%= link_to("Cancel", account_posts_path, class: "btn btn-md btn-default")%>
</div>
</div>
<% end %>


