    <!-- Header -->
    <a name="Sign-in"></a>
    <div class="intro-header">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Book Reviews</h1>
                        <h3>Let's find some awesome books!</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline">

                            <li>
                                <div class="btn-block">
                                <%= form_tag groups_path, id: "search-form", :method => "get" do %>  
                                <%= text_field_tag :search, params[:search], class: 'btn btn-default btn-lg', placeholder: "Search Books" %>
                                <%= submit_tag "Search", class: 'btn btn-default btn-lg', name: nil %>        
                                <% end %> 
                                </div>
                            </li>   
                                                       
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->
    <a name="latest"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <!-- <hr class="section-heading-spacer"> -->
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Collection for you:<br>Latest Updated Book!</h2>
                    <table class="table table-hover"> 
                        <% @groups.each do |group|  %>
                            <tr>
                              <td class="text-success lead">
                                <%= group.title %> &emsp; ( <%= group.updated_at.to_date %> )  
                              </td>
                            </tr>
                        <% end %>
                    </table>         
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive img-thumbnail" src="/assets/read.jpg" alt="">
                </div>
            </div>

        </div>
    </div>
    
    
    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Write down <br>what you're thinking:</h2>
                    <ul class="list-inline">
                        <li>
                        <%= link_to('See Reviews', reviews_path, class: "btn btn-default btn-lg")%>
                        </li>
                        <li>
                        <%= link_to("Add Book", new_group_path, class: "btn btn-default btn-lg")%>
                        </li> 
                    </ul>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <img class="img-responsive" src="/assets/dog.png" alt="">
                </div>
            </div>

        </div>
    </div>
    



    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href=#latest>What's news</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <%= link_to 'Reviews', reviews_path %>
                        </li>

                        <% if !current_user %>
                        <li class="footer-menu-divider">&sdot;</li>                       
                        <li>
                            <%= link_to("Login", new_user_session_path) %>
                        </li>
                        <% end %>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; Online Book Reviews 2017. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>
